server {
    if ($host = client.thingy-project-red.com) {
        return 301 https://$host$request_uri;
    }

    if ($host = api.thingy-project-red.com) {
        return 301 https://$host$request_uri;
    }

    listen 80;
    listen [::]:80;
    server_name api.thingy-project-red.com client.thingy-project-red.com;
    return 404;
}
